  <%= form_tag plan_subscriptions_path, id: "payment-form" do %>
  <div class="form-row  my-6 p-4 bg-grey-lighter text-grey-darkest rounded-l">
     <p>
      <label class="amount">
        <span>Amount: $<%= @plan.price_cents/100  %></span>
      </label>
    </p>
    <label for="card-element">
    </label>
    <div id="card-element">
