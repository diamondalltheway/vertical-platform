    <%= label_tag(:couponCode, 'Coupon:') %>
    <%= text_field_tag(:couponCode) %>
    </p>

  <button class="block sm:inline-block no-underline px-6 py-3 mb-2 rounded text-base text-white font-semibold bg-purple-light hover:bg-purple-light shadow-lg">Submit Payment</button>
  <% end %>
