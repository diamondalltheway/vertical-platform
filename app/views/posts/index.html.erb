<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>String</th>
      <th>Body</th>
      <th>Text</th>
      <th>Category</th>
      <th>String</th>
      <th>Permalink</th>
      <th>String</th>
      <th>Meta title</th>
      <th>String</th>
      <th>Meta description</th>
      <th>Text</th>
      <th>No index</th>
      <th>Boolean</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.string %></td>
        <td><%= post.body %></td>
        <td><%= post.text %></td>
        <td><%= post.category %></td>
        <td><%= post.string %></td>
        <td><%= post.permalink %></td>
        <td><%= post.string %></td>
        <td><%= post.meta_title %></td>
        <td><%= post.string %></td>
        <td><%= post.meta_description %></td>
        <td><%= post.text %></td>
        <td><%= post.no_index %></td>
        <td><%= post.boolean %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
